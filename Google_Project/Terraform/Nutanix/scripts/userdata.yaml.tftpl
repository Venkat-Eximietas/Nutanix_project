#cloud-config
version: 1
apt:
  http_proxy: http://${proxy_server}/
  ftp_proxy: http://${proxy_server}/
  https_proxy: http://${proxy_server}/
package_update: true
package_upgrade: true
package_reboot_if_required: true
packages:
  - apt-transport-https
  - git
  - openvswitch-switch-dpdk
  - python-is-python3
  - python3-gnupg
write_files:
  - path: /etc/hosts
    content: |
      # Entries below via Terraform
      ${host_content}
    append: true
%{ if is_saltmaster ~}
# Master config files
  - path: /etc/salt/master.d/peer.conf
    permissions: '0600'
    content: |
      peer:
        .*:
          - x509.sign_remote_certificate
  - path: /etc/salt/master.d/roots.conf
    permissions: '0600'
    content: |
      file_roots:
        base:
          - /srv/salt/
          - /srv/files/
      pillar_roots:
        base:
          - /srv/pillar/
  - path: /etc/salt/master.d/peer.conf
    permissions: '0600'
    content: |
      gpg_keydir: /etc/salt/gpgkeys
  - path: /etc/salt/master.d/peer.conf
    permissions: '0600'
    content: |
      features:
        x509_v2: true
