# Salt minion config files
  - path: /etc/salt/minion.d/99-master-address.conf
    permissions: '0644'
    content: |
      master: ${saltmaster}
  - path: /etc/salt/minion.d/minion_id.conf
    permissions: '0644'
    content: |
      id: ${hostname}
  - path: /etc/salt/minion.d/x509.conf
    permissions: '0644'
    content: |
      features:
        x509_v2: true
# Salt Bootstrap script
  - path: /tmp/gmits/gmits-init.sh
    permissions: '0511'
    content: |
      #!/bin/bash

      export DEBIAN_FRONTEND=noninteractive
      export NEEDRESTART_SUSPEND=y

      GPGHOME='/etc/salt/gpgkeys'curl 
      GMITSTMP='/tmp/gmits'
      SALTBOOTSTRAP='bootstrap-salt.sh'
      HOSTNAME=$(uname -n)

      # Set system-wide proxy
      cat <<-EOF >>/etc/environment
      http_proxy="http://${proxy_server}/"
      https_proxy="http://${proxy_server}/"
      ftp_proxy="http://${proxy_server}/"
      no_proxy="localhost,127.0.0.1"
      HTTP_PROXY="http://${proxy_server}/"
      HTTPS_PROXY="http://${proxy_server}/"
      FTP_PROXY="http://${proxy_server}/"
      NO_PROXY="localhost,127.0.0.1"
      EOF

      # Setup Salt repo
      sudo curl -fsSL -o /etc/apt/keyrings/salt-archive-keyring-2023.gpg https://repo.saltproject.io/salt/py3/ubuntu/22.04/amd64/SALT-PROJECT-GPG-PUBKEY-2023.gpg
      echo "deb [signed-by=/etc/apt/keyrings/salt-archive-keyring-2023.gpg arch=amd64] https://repo.saltproject.io/salt/py3/ubuntu/22.04/amd64/3006 jammy main" | sudo tee /etc/apt/sources.list.d/salt.list
      apt-get update

      if [[ $HOSTNAME =~ (-cfg-01)$ ]]; then
        echo "Setting up Salt Primary"
        # setup GPG keys for salt master
        mkdir -p $GPGHOME && chmod -R 0700 $GPGHOME
        touch $GPGHOME/privkey.gpg
        gpg --homedir $GPGHOME --import $GPGHOME/pubkey.gpg
        gpg --import $GPGHOME/pubkey.gpg
        gpg --homedir $GPGHOME --import-ownertrust $GPGHOME/trust.gpg
        sudo apt-get install salt-master salt-minion -y
        sudo systemctl enable salt-master && sudo systemctl start salt-master
        chown -R salt $GPGHOME
      else
        echo "Install Salt Minion"
        sudo apt-get install salt-minion -y
      fi
      sudo systemctl enable salt-minion && sudo systemctl start salt-minion
runcmd:
  - sudo ./tmp/gmits/gmits-init.sh